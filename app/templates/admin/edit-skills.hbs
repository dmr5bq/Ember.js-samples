{{outlet}}

<form>
    <div class="form-group">
        <label for="name">Enter the Skill Name</label>
      {{input type="text" class="form-control" id="name" placeholder="Enter name" autofocus='autofocus' value=name}}
    </div>
    <div class="form-group">
        <label for="level">Enter the Skill Level</label>
      {{input type="text" class="form-control" id="level" placeholder="0, 1, 2, etc."  value=level}}
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-lg" disabled={{isDisabled}} {{action 'submitSkill'}}>Add to the
        database
    </button>
  {{#if response}}
      <div class="alert alert-success">{{response}}</div>
  {{/if}}
</form>